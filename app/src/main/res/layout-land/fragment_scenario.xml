<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scenario.ScenarioFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2Scenario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/indicatorScenario" />

    <TextView
        android:id="@+id/scenarioLabel"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:layout_marginBottom="106dp"
        android:background="@color/namespaceBlack"
        android:fontFamily="@font/cinzel_decorative_bold"
        android:gravity="center"
        android:text="@string/scenarioLabel"
        android:textColor="@color/namespaceOrange"
        android:textSize="36sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/indicatorScenario"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:background="@color/namespaceBlack"
        android:visibility="gone"
        app:ci_drawable="@drawable/circle_indicator_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scenarioLabel" />


</androidx.constraintlayout.widget.ConstraintLayout>