<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="154dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/portrait_shape"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tvPawnName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivPawnPortrait"
            android:layout_width="91dp"
            android:layout_height="114dp"
            app:srcCompat="@drawable/portrait" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvPawnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/cinzel_decorative_bold"
        android:gravity="center"
        android:text="@string/generatedPawnName"
        android:textColor="@color/namespaceBlack"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPawnProfession"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPawnAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/cinzel_decorative_bold"
        android:gravity="center"
        android:text="@string/generatedPawnAge"
        android:textColor="@color/namespaceBlack"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/frameStrength"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPawnProfession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/cinzel_decorative_bold"
        android:gravity="center"
        android:text="@string/generatedPawnProfession"
        android:textColor="@color/namespaceBlack"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPawnAge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/frameStrength"
        layout="@layout/skill_row"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="64dp"
        app:layout_constraintBottom_toTopOf="@+id/frameDexterity"
        app:layout_constraintStart_toStartOf="parent" />


    <include
        android:id="@+id/frameEndurance"
        layout="@layout/skill_row"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toTopOf="@+id/frameIntelligence"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/frameIntelligence"
        layout="@layout/skill_row"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toTopOf="@+id/frameCharisma"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/frameDexterity"
        layout="@layout/skill_row"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="64dp"
        app:layout_constraintBottom_toTopOf="@+id/frameMentality"
        app:layout_constraintEnd_toStartOf="@+id/frameIntelligence"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <include
        android:id="@+id/frameMentality"
        layout="@layout/skill_row"
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/frameCharisma"
        app:layout_constraintHorizontal_bias="0.598"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/frameCharisma"
        layout="@layout/skill_row"
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>