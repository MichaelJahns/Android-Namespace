<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32sp"
    android:background="@color/namespaceBlack"
    android:padding="12sp">

    <TextView
        android:id="@+id/tvNumberOfScenarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cinzel_decorative_bold"
        android:text="@string/settingNumberOfScenarios"
        android:textColor="@color/namespaceOrange"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/dsNumberOfScenarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:max="20"
        android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
        android:thumb="@drawable/ic_settings_orange"
/>

    <TextView
        android:id="@+id/tvAgeRangeOfPawns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:fontFamily="@font/cinzel_decorative_bold"
        android:text="@string/settingRangeOfPawnAges"
        android:textColor="@color/namespaceOrange"
        android:textSize="16sp" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/rsAgeRangeOfPawns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150sp"
        android:stepSize="1.0"
        android:valueFrom="1.0"
        android:valueTo="100.0"
        app:thumbColor="@color/namespaceOrange"
        app:values="@array/initial_age_range_pawns" />
</FrameLayout>